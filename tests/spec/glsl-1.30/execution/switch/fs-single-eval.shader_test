# https://gitlab.freedesktop.org/mesa/mesa/-/issues/5185

[require]
GLSL >= 1.30

[vertex shader]
#version 130
void main()
{
	gl_Position = gl_Vertex;
}

[fragment shader]
#version 130

void main()
{
	int x = 1;
	switch (x++) {
	case 1:
		gl_FragColor = vec4(0.0, 1.0, 0.0, 0.0);
		break;
	case 2:
		gl_FragColor = vec4(1.0, 0.0, 0.0, 0.0);
		break;
	default:
		gl_FragColor = vec4(0.0);
		break;
	}
}

[test]
draw rect -1 -1 2 2
probe all rgb 0 1 0 0
